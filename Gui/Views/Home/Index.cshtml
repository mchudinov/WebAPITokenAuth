@{
    ViewBag.Title = "Claims";
}
<script>
    //$.get("/api/localData");
</script>
<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Your claims page</h2>
</hgroup>
<h3>Values from Identity</h3>
<table>
    <tr>
        <td>
            IsAuthenticated:
        </td>
        <td>
            @ViewBag.ClaimsIdentity.IsAuthenticated
        </td>
    </tr>
    <tr>
        <td>
            Name:
        </td>
        <td>
            @ViewBag.ClaimsIdentity.Name
        </td>
    </tr>
</table>
<h3>Claims from ClaimsIdentity</h3>
<table border="1">
    <tr>
        <th>
            Claim Type
        </th>
        <th>
            Claim Value
        </th>
    </tr>
    @foreach (System.Security.Claims.Claim claim in ViewBag.ClaimsIdentity.Claims)
    {
        <tr>
            <td>
                @claim.Type
            </td>
            <td>
                @claim.Value
            </td>
        </tr>
    }
</table>
<h3>API reponse</h3>
Status: @ViewBag.ResponseStatus
<br/>
Code: @ViewBag.ResponseCode
<br />
Response: @ViewBag.Response
